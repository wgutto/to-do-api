generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int @id @default(autoincrement())
  name  String
  email String @unique
  password String
  tasks Task[]

  @@map("users")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  @@map("tasks")
}
